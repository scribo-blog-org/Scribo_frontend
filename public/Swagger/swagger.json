{
  "openapi": "3.0.0",
  "info": {
    "title": "Scribo-blog",
    "version": "1.0.0",
    "description": "Api documentation for scribo-blog backend."
  },
  "servers": [
    {
      "url": "http://localhost:3001/api/"
    }
  ],
  "paths": {
    "/users": {
      "get": {
        "summary": "Get all users",
        "description": "Returns a list of all users",
        "parameters": [
          {
            "name": "nick_name",
            "in": "query",
            "required": false,
            "description": "Nick name of the user",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "_id",
            "in": "query",
            "required": false,
            "description": "Id of the user",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "is_admin",
            "in": "query",
            "required": false,
            "description": "Indicates whether the user has admin privileges",
            "schema": {
              "type": "boolean"
            }
          },
          {
            "name": "is_verified",
            "in": "query",
            "required": false,
            "description": "Indicates whether the user has been verified",
            "schema": {
              "type": "boolean"
            }
          },
          {
            "name": "description",
            "in": "query",
            "required": false,
            "description": "Description of user",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
            "200": {
            "description": "A JSON array of users",
            "content": {
                "application/json": {
                "schema": {
                    "type": "object",
                    "properties": {
                        "status": {
                        "type": "boolean",
                        "description": "Indicates whether the request was successful"
                        },
                        "message": {
                        "type": "string",
                        "description": "Response message"
                        },
                        "data": {
                        "type": "array",
                        "description": "Array of user objects",
                        "items": {
                            "type": "object",
                            "properties": {
                            "_id": { "type": "string", "description": "Unique identifier of the user" },
                            "nick_name": { "type": "string", "description": "Nick name of the user" },
                            "avatar": { "type": "string", "format": "uri", "description": "URL of the user's avatar" },
                            "created_date": { "type": "string", "format": "date-time", "description": "Date when the user was created" },
                            "is_admin": { "type": "boolean", "description": "True if the user has admin privileges" },
                            "__v": { "type": "integer", "description": "Version key (internal MongoDB field)" },
                            "is_verified": { "type": "boolean", "description": "True if the user is verified" },
                            "description": { "type": "string", "description": "User's description or bio" },
                            "follows": {
                                "type": "array",
                                "items": { "type": "string" },
                                "description": "Array of user IDs that this user follows"
                            },
                            "followers": {
                                "type": "array",
                                "items": { "type": "string" },
                                "description": "Array of user IDs that follow this user"
                            }
                            },
                            "required": ["_id", "nick_name", "created_date", "is_admin", "is_verified", "follows", "followers"]
                        }
                        }
                    },
                        "required": ["status", "message", "data"]
                    }
                }
            }
            },
            "400": {
                "description": "Bad Request - invalid input",
                "content": {
                    "application/json": {
                    "schema": {
                        "type": "object",
                        "properties": {
                        "status": { "type": "boolean", "example": false, "description": "Indicates failure" },
                        "message": { "type": "string", "example": "Some errors in your fields", "description": "Summary message" },
                        "data": { "type": "null", "example": null, "description": "No data returned on error" },
                        "errors": {
                            "type": "object",
                            "properties": {
                            "params": {
                                "type": "object",
                                "description": "Validation errors in request parameters",
                                "additionalProperties": {
                                "type": "object",
                                "properties": {
                                    "message": { "type": "string" },
                                    "data": { "type": "string" }
                                }
                                }
                            },
                            "body": {
                                "type": "object",
                                "description": "Validation errors in request body",
                                "additionalProperties": {
                                "type": "object",
                                "properties": {
                                    "message": { "type": "string" },
                                    "data": { "type": "string" }
                                }
                                }
                            }
                            }
                        }
                        },
                        "required": ["status", "message", "data", "errors"]
                    },
                    "examples": {
                        "invalidNickName": {
                        "summary": "Invalid nick_name param",
                        "value": {
                            "status": false,
                            "message": "Some errors in your fields",
                            "data": null,
                            "errors": {
                            "params": {
                                "nick_name": {
                                "message": "Nick name must be more than 2 and less than 21 characters",
                                "data": "1"
                                }
                            }
                            }
                        }
                        },
                        "invalidIdAndBody": {
                        "summary": "Invalid _id and body fields",
                        "value": {
                            "status": false,
                            "message": "Some errors in your fields",
                            "data": null,
                            "errors": {
                            "params": {
                                "_id": {
                                "message": "Invalid user ID",
                                "data": "abc123"
                                }
                            },
                            "body": {
                                "is_admin": {
                                "message": "is_admin must be boolean",
                                "data": "yes"
                                },
                                "description": {
                                "message": "Description length must be less than 100 characters",
                                "data": "Lorem ipsum dolor sit amet..."
                                }
                            }
                            }
                        }
                        },
                        "invalidVerified": {
                        "summary": "Invalid is_verified field",
                        "value": {
                            "status": false,
                            "message": "Some errors in your fields",
                            "data": null,
                            "errors": {
                            "body": {
                                "is_verified": {
                                "message": "is_verified must be boolean",
                                "data": "maybe"
                                }
                            }
                            }
                        }
                        }
                    }
                    }
                }
                },
            "404": {
                "description": "Not found",
                "content": {
                    "application/json": {
                    "schema": {
                        "type": "object",
                        "properties": {
                        "status": {
                            "type": "boolean",
                            "example": false,
                            "description": "Indicates failure"
                        },
                        "message": {
                            "type": "string",
                            "example": "User not found",
                            "description": "Error message describing the problem"
                        },
                        "data": {
                            "type": "null",
                            "example": null,
                            "description": "No data returned on error"
                        }
                        },
                        "required": ["status", "message", "data"]
                    }
                    }
                }
            }
        }
      }
    },
    "/users/{nick_name}": {
      "get": {
        "summary": "Get user by nick name",
        "parameters": [
          {
            "name": "nick_name",
            "in": "path",
            "required": true,
            "description": "Nick name of the user",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "A user object",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": { "type": "string", "example": "123" },
                    "name": { "type": "string", "example": "John Doe" },
                    "email": { "type": "string", "example": "john@example.com" }
                  }
                }
              }
            }
          },
          "404": { "description": "User not found" }
        }
      }
    }
  }
}
